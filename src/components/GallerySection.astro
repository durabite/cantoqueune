---
import GalleryInteractive from "@/components/GalleryInteractive";
---

<section id="galeria" class="gallery-section">
    <div class="container">
        <h2 class="section-title">Galer√≠a</h2>
        <GalleryInteractive client:visible />
    </div>
</section>

<style>
    .gallery-section {
        padding: 100px 0;
        background-image: url("/image/principal/galeria/textura.png");
        background-size: cover;
        background-position: center;
        background-repeat: repeat;
        background-attachment: fixed;
        position: relative;
        width: 100%; /* Ensure full width */
        margin: 0; /* Remove any default margins */
        overflow: hidden; /* Prevent spillover */
    }

    /* Dark overlay */
    .gallery-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(5, 5, 16, 0.7);
        z-index: 1; /* Overlay on top of bg image */
    }

    .container {
        position: relative;
        z-index: 2; /* Content on top of overlay */
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        position: relative;
        display: inline-block;
        left: 50%;
        transform: translateX(-50%);
        font-family: var(--font-heading);
        font-weight: 700;
        color: white; /* Explicitly set color */
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--gradient-main);
        margin: 10px auto 0;
        border-radius: 2px;
    }
</style>
