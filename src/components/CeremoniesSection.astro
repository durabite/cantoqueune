---
import { Button } from "@/components/ui/button";
import { Check, FlameKindling, Guitar } from "lucide-react";

const packages = [
    {
        id: "ceremony",
        title: "Solo Ceremonia",
        description: "Experiencia profunda de conexión y sanación.",
        featured: false,
        phases: [
            { name: "Fase 1", date: "Hasta 15 Feb", price: "$1,200" },
            { name: "Fase 2", date: "Hasta 02 Mar", price: "$1,380" },
            { name: "Fase 3", date: "Hasta 17 Mar", price: "$1,590" },
        ],
    },
    {
        id: "mixed",
        title: "Ceremonia + Concierto",
        description: "La experiencia completa. Sanación y celebración.",
        featured: true,
        phases: [
            { name: "Fase 1", date: "Hasta 15 Feb", price: "$2,500" },
            { name: "Fase 2", date: "Hasta 02 Mar", price: "$2,875" },
            { name: "Fase 3", date: "Hasta 17 Mar", price: "$3,300" },
        ],
    },
    {
        id: "concert",
        title: "Solo Concierto",
        description: "Disfruta de la música medicina en vivo.",
        featured: false,
        phases: [
            { name: "Fase 1", date: "Hasta 15 Feb", price: "$900" },
            { name: "Fase 2", date: "Hasta 02 Mar", price: "$1,035" },
            { name: "Fase 3", date: "Hasta 17 Mar", price: "$1,190" },
        ],
    },
];
---

<section id="paquetes" class="ceremonies-section">
    <div class="container">
        <h2 class="section-title">Paquetes Disponibles</h2>

        <div class="cards-grid">
            {
                packages.map((pkg) => (
                    <div
                        class={`package-card ${pkg.featured ? "featured" : ""}`}
                    >
                        {pkg.featured && (
                            <div class="recommended-badge">Recomendado</div>
                        )}

                        <div class="card-header">
                            <div class="flex justify-center gap-4 mb-4 text-[var(--primary-color)]">
                                {pkg.id === "ceremony" && (
                                    <FlameKindling className="w-8 h-8" />
                                )}
                                {pkg.id === "mixed" && (
                                    <>
                                        <FlameKindling className="w-8 h-8" />
                                        <Guitar className="w-8 h-8" />
                                    </>
                                )}
                                {pkg.id === "concert" && (
                                    <Guitar className="w-8 h-8" />
                                )}
                            </div>
                            <h3>{pkg.title}</h3>
                            <p class="description">{pkg.description}</p>
                        </div>

                        <div class="phases-list">
                            {pkg.phases.map((phase) => (
                                <div class="phase-item">
                                    <div class="phase-header">
                                        <span class="phase-name">
                                            {phase.name}
                                        </span>
                                        <span class="phase-date">
                                            {phase.date}
                                        </span>
                                    </div>
                                    <div class="phase-price">
                                        {phase.price}{" "}
                                        <span class="currency">MXN</span>
                                    </div>
                                </div>
                            ))}
                        </div>

                        <div class="card-action">
                            <Button
                                variant="outline"
                                className="w-full py-6 rounded-xl text-lg font-bold transition-all hover:scale-105 bg-transparent border-white/20 text-white hover:bg-white/10 hover:border-white hover:text-white cursor-pointer"
                            >
                                Reservar
                            </Button>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .ceremonies-section {
        padding: 100px 0;
        background-image:
            linear-gradient(rgba(5, 5, 16, 0.9), rgba(5, 5, 16, 0.8)),
            url("/image/principal/ceremonias/ceremonias.png");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 4rem;
        position: relative;
        display: inline-block;
        left: 50%;
        transform: translateX(-50%);
        font-family: var(--font-heading);
        font-weight: 700;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--gradient-main);
        margin: 10px auto 0;
        border-radius: 2px;
    }

    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        align-items: start;
    }

    .package-card {
        background: rgba(18, 18, 37, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 30px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .package-card:hover {
        transform: translateY(-10px);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    }

    .package-card.featured {
        background: rgba(18, 18, 37, 0.8);
        border: 2px solid var(--primary-color);
        box-shadow: 0 0 20px rgba(176, 0, 176, 0.2);
        transform: scale(1.02);
        z-index: 10;
    }

    .package-card.featured:hover {
        transform: scale(1.02) translateY(-10px);
        box-shadow: 0 15px 40px rgba(176, 0, 176, 0.3);
    }

    .recommended-badge {
        position: absolute;
        top: 0;
        right: 0;
        background: var(--gradient-main);
        color: white;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 5px 20px;
        border-bottom-left-radius: 15px;
        box-shadow: -2px 2px 10px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .card-header h3 {
        font-size: 1.8rem;
        font-family: var(--font-heading);
        margin-bottom: 10px;
        color: white;
    }

    .description {
        color: var(--text-gray);
        font-size: 0.95rem;
    }

    .phases-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 30px;
    }

    .phase-item {
        background: rgba(255, 255, 255, 0.03);
        padding: 15px;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: background 0.3s;
    }

    .phase-item:hover {
        background: rgba(255, 255, 255, 0.07);
    }

    .phase-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px;
    }

    .phase-name {
        font-weight: 700;
        color: var(--accent-color);
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 1px;
    }

    .phase-date {
        font-size: 0.8rem;
        color: var(--text-gray);
        background: rgba(255, 255, 255, 0.1);
        padding: 2px 8px;
        border-radius: 4px;
    }

    .phase-price {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        font-weight: 700;
        color: white;
    }

    .currency {
        font-size: 0.9rem;
        color: var(--text-gray);
        font-weight: 400;
        font-family: var(--font-body);
    }

    @media (max-width: 768px) {
        .package-card.featured {
            transform: scale(1);
        }

        .package-card.featured:hover {
            transform: translateY(-10px);
        }
    }
</style>
