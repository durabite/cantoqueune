---
import { Button } from "@/components/ui/button";
---

<section id="fechas" class="dates-section">
    <div class="container">
        <h2 class="section-title">Conciertos</h2>
        <div class="dates-list">
            <!-- Date Item -->
            <div class="date-item">
                <div class="date-info">
                    <span class="day">02</span>
                    <span class="month">ABRIL</span>
                </div>
                <div class="location-info">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>CDMX</h3>
                    <p>Teatro de la Ciudad</p>
                </div>
                <Button
                    variant="outline"
                    className="bg-transparent border border-white/30 text-white hover:bg-white/10 hover:border-white hover:text-white rounded-xl !px-12 transition-all hover:scale-105 cursor-pointer"
                >
                    Reservar
                </Button>
            </div>

            <!-- Date Item -->
            <div class="date-item">
                <div class="date-info">
                    <span class="day">09</span>
                    <span class="month">ABRIL</span>
                </div>
                <div class="location-info">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>MONTERREY</h3>
                    <p>Auditorio Pabell√≥n M</p>
                </div>
                <Button
                    variant="outline"
                    className="bg-transparent border border-white/30 text-white hover:bg-white/10 hover:border-white hover:text-white rounded-xl !px-12 transition-all hover:scale-105 cursor-pointer"
                >
                    Reservar
                </Button>
            </div>

            <!-- Date Item -->
            <div class="date-item">
                <div class="date-info">
                    <span class="day">16</span>
                    <span class="month">ABRIL</span>
                </div>
                <div class="location-info">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3>TULUM</h3>
                    <p>Holistika</p>
                </div>
                <Button
                    variant="outline"
                    className="bg-transparent border border-white/30 text-white hover:bg-white/10 hover:border-white hover:text-white rounded-xl !px-12 transition-all hover:scale-105 cursor-pointer"
                >
                    Reservar
                </Button>
            </div>
        </div>
    </div>
</section>

<style>
    .dates-section {
        padding: 80px 0;
        background-image: url("/image/principal/conciertos/bg-fechas.png");
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .dates-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(5, 5, 16, 0.5);
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        position: relative;
        display: inline-block;
        left: 50%;
        transform: translateX(-50%);
        font-family: var(--font-heading);
        font-weight: 700;
    }

    .section-title::after {
        content: "";
        display: block;
        width: 60px;
        height: 3px;
        background: var(--gradient-main);
        margin: 10px auto 0;
        border-radius: 2px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .dates-list {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }

    .date-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 30px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        transition: var(--transition);
    }

    .date-item:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .date-info {
        text-align: center;
        min-width: 80px;
    }

    .date-info .day {
        display: block;
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
    }

    .date-info .month {
        font-size: 0.8rem;
        color: var(--primary-color);
        font-weight: 700;
    }

    .location-info {
        flex: 1;
        padding: 0 30px;
    }

    .location-info i {
        color: var(--accent-color);
        margin-right: 10px;
    }

    .location-info h3 {
        display: inline-block;
        font-size: 1.5rem;
        margin-bottom: 5px;
    }

    .location-info p {
        color: var(--text-gray);
        font-size: 0.9rem;
        margin-left: 25px;
    }

    @media (max-width: 768px) {
        .date-item {
            flex-direction: column;
            text-align: center;
            gap: 20px;
        }

        .location-info {
            padding: 0;
        }

        .location-info p {
            margin-left: 0;
        }
    }
</style>
